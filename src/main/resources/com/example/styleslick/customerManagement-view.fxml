<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="1024.0" prefHeight="900.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.styleslick.controller.CustomerManagementMenuController">
   <center>
      <TableView fx:id="tableView_customer" prefHeight="545.0" prefWidth="1288.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="column_customer_id" prefWidth="75.0" text="Kunden-Nr" />
          <TableColumn fx:id="column_username" prefWidth="75.0" text="Benutzername" />
          <TableColumn fx:id="column_name" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="column_lastName" prefWidth="75.0" text="Nachname" />
            <TableColumn fx:id="column_street" prefWidth="75.0" text="Strasse" />
            <TableColumn fx:id="column_plz" prefWidth="75.0" text="Postleitzahl" />
            <TableColumn fx:id="column_ort" prefWidth="75.0" text="Ort" />
            <TableColumn fx:id="column_platform" prefWidth="75.0" text="Gekauft über" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="field_username" promptText="Benutzername*" />
                  <TextField fx:id="field_name" promptText="Name" />
                  <TextField fx:id="field_lastName" promptText="Nachname" />
                  <TextField fx:id="field_street" promptText="Straße" />
                  <TextField fx:id="field_plz" promptText="Postleitzahl" />
                  <TextField fx:id="field_ort" promptText="Ort" />
                  <TextField fx:id="field_platform" promptText="Gekauft über*" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="1280.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterShowAllCustomers" onMouseClicked="#onMouseClickedShowAllCustomers" text="Alle Kunden anzeigen">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterAddCustomer" onMouseClicked="#onMouseClickedAddCustomer" text="Kunde Speichern">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <Button layoutX="505.0" layoutY="25.0" mnemonicParsing="false" onKeyPressed="#onKeyPressedUpdateCustomer" onMouseClicked="#onMouseClickedUpdateCustomer" text="Kunden bearbeiten">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedDeleteCustomer" onMouseClicked="#onMouseCLickedDeleteCustomer" text="Kunde Löschen" textFill="RED">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterSearchCustomer" onMouseClicked="#onMouseClickedSearchCustomer" text="Kunde Suchen">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterExitCustomerManagement" onMouseClicked="#onMouseClickedExitCustomerManagement" text="Abbrechen">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </top>
