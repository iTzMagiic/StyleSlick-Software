<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="1024.0" prefHeight="900.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.styleslick.controller.ArticleManagementMenuController">
    <center>
        <TableView fx:id="tableView_articles" prefHeight="545.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="column_article_id" prefWidth="75.0" text="Artikel Nummer" />
                <TableColumn fx:id="column_category_id" prefWidth="75.0" text="Kategorie ID" />
                <TableColumn fx:id="column_name" prefWidth="75.0" text="Artikel Name" />
                <TableColumn fx:id="column_color" prefWidth="75.0" text="color" />
                <TableColumn fx:id="column_purchase_price" prefWidth="75.0" text="purchase_price" />
                <TableColumn fx:id="column_purchase_date" prefWidth="75.0" text="purchase_date" />
                <TableColumn fx:id="column_manufacturer" prefWidth="75.0" text="manufacturer" />
                <TableColumn fx:id="column_purchased_from" prefWidth="75.0" text="Gekauft über" />
                <TableColumn fx:id="column_quality" prefWidth="75.0" text="Qualität" />
                <TableColumn fx:id="column_amount" prefWidth="75.0" text="amount" />
                <TableColumn fx:id="column_stock" prefWidth="75.0" text="stock" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <top>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="93.0" prefWidth="1280.0" spacing="10.0">
                    <children>
                        <ChoiceBox fx:id="choiceBox_category_id" prefWidth="150.0" />
                        <TextField fx:id="field_name" promptText="Artikel Name*" />
                        <TextField fx:id="field_color" promptText="color*" />
                        <TextField fx:id="field_purchase_price" promptText="purchase_price*" />
                        <DatePicker fx:id="datePicker_purchase_date" promptText="purchase_date*" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <TextField fx:id="field_manufacturer" promptText="manufacturer" />
                        <TextField fx:id="field_purchased_from" promptText="Gekauft über*" />
                        <TextField fx:id="field_quality" promptText="Qualität" />
                        <TextField fx:id="field_amount" promptText="amount*" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="54.0" prefWidth="1280.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterShowAllArticles" onMouseClicked="#onMouseClickedShowAllArticles" text="Alle Artikel anzeigen">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font></Button>
                        <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterAddArticle" onMouseClicked="#onMouseClickedAddArticle" text="Artikel Speichern">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font></Button>
                        <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedDeleteArticle" onMouseClicked="#onMouseCLickedDeleteArticle" text="Artikel Löschen" textFill="RED">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterSearchArticle" onMouseClicked="#onMouseClickedSearchArticle" text="Artikel Suchen">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font></Button>
                        <Button mnemonicParsing="false" onKeyPressed="#onKeyPressedEnterExitArticleManagement" onMouseClicked="#onMouseClickedExitArticleManagement" text="Abbrechen">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font></Button>
                    </children>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </VBox>
    </top>
</BorderPane>
